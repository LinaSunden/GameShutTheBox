<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SUP23_G4.Views"
             xmlns:vm="clr-namespace:SUP23_G4.ViewModels"
             xmlns:Dice="clr-namespace:SUP23_G4.Views.Dice"  x:Class="SUP23_G4.Views.GameView"
             d:DataContext="{d:DesignInstance {x:Type vm:GameViewModel}}"
             xmlns:GameTiles="clr-namespace:SUP23_G4.Views.GameTiles" 

             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border
         Background="DarkGreen"
     BorderBrush="Gray"  
     BorderThickness="3"
     CornerRadius="5"
            >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.RowSpan="3" Background="SlateGray"/>



            <StackPanel Grid.Row="0" Grid.Column="0">
                <TextBlock
                    Text="Spelare 2:"
                    HorizontalAlignment="Left"
                    Foreground="White"
                    FontSize="20"
                    Margin="10,30,0,0"  
                    Opacity="1" 
                    FontWeight="Bold" 
                    FontFamily="Cascadia Mono">
                    <TextBlock.Effect>
                        <DropShadowEffect/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock
                    Text="Poäng:"
                    HorizontalAlignment="left"
                    Foreground="White"
                    FontSize="20"
                    Margin="10,20,0,0"  
                    Opacity="1" 
                    FontWeight="Bold" 
                    FontFamily="Cascadia Mono">
                    <TextBlock.Effect>
                        <DropShadowEffect/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0">
                <TextBlock
                    Text="Spelare 1:"
                    HorizontalAlignment="Left"
                    Foreground="White"
                    FontSize="20"
                    Margin="10,30,0,0"  
                    Opacity="1" 
                    FontWeight="Bold" 
                    FontFamily="Cascadia Mono">
                    <TextBlock.Effect>
                        <DropShadowEffect/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock 
                    Text="Poäng: "
                    HorizontalAlignment="left"
                    Foreground="White"
                    FontSize="20"
                    Margin="10,20,0,0"  
                    Opacity="1" 
                    FontWeight="Bold" 
                    FontFamily="Cascadia Mono">
                    <TextBlock.Effect>
                        <DropShadowEffect/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Center">
                <TextBlock
          Text="Omgång:"
          Foreground="White"
          FontSize="20"  
          Opacity="1" 
          FontWeight="Bold" 
          FontFamily="Cascadia Mono">
                    <TextBlock.Effect>
                        <DropShadowEffect/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>

            <Grid Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <!--The First Dice-->
                <Dice:Dice Grid.Column="0" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding VisibilityOne1}"/>
                <Dice:Dice2 Grid.Column="0" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding VisibilityOne2}"/>
                <Dice:Dice3 Grid.Column="0" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding VisibilityOne3}"/>
                <Dice:Dice4 Grid.Column="0" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding VisibilityOne4}"/>
                <Dice:Dice5 Grid.Column="0" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding VisibilityOne5}"/>
                <Dice:Dice6 Grid.Column="0" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding VisibilityOne6}"/>

                <!--The Second Dice-->
                <Dice:Dice Grid.Column="1" HorizontalAlignment="Left" Margin="10" Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding VisibilityTwo1}"/>
                <Dice:Dice2 Grid.Column="1" HorizontalAlignment="Left" Margin="10" Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding VisibilityTwo2}"/>
                <Dice:Dice3 Grid.Column="1" HorizontalAlignment="Left" Margin="10" Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding VisibilityTwo3}"/>
                <Dice:Dice4 Grid.Column="1" HorizontalAlignment="Left" Margin="10" Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding VisibilityTwo4}"/>
                <Dice:Dice5 Grid.Column="1" HorizontalAlignment="Left" Margin="10" Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding VisibilityTwo5}"/>
                <Dice:Dice6 Grid.Column="1" HorizontalAlignment="Left" Margin="10" Grid.Row="1" VerticalAlignment="Center" Visibility="{Binding VisibilityTwo6}"/>

            </Grid>



            <Button Content="Kasta Tärningen" FontFamily="Cascadia Code" FontWeight="SemiBold" Grid.Column="3" Height="50" BorderBrush="#FF7B7B7B" Grid.Row="1" Command="{Binding RollDiceCommand}" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="LightGray" Offset="1"/>
                        <GradientStop Color="DarkGreen" Offset="0"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Button.OpacityMask>
            </Button>



            <GameTiles:GameTile  Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Margin="5,0,0,0"/>

        </Grid>
    </Border>

</UserControl>
