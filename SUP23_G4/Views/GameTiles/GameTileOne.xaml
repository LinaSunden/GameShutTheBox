<local:Tile  x:Class="SUP23_G4.Views.GameTiles.GameTileOne"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SUP23_G4.Views.GameTiles"
             xmlns:converter="clr-namespace:SUP23_G4.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:StatusToColorConverter x:Key="StatusToColorConverter" />
    </UserControl.Resources>
    <Grid Width="50">
        <Rectangle Width="50" Stroke="Black" StrokeThickness="3"  Fill="{Binding CurrentStatus, Converter={StaticResource StatusToColorConverter}}"/>
        <TextBlock Text="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="18" FontWeight="Normal" Margin="5"/>

    </Grid>
</local:Tile>
