<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\DiceSide1.png" />
    <None Remove="Resources\DiceSide2.png" />
    <None Remove="Resources\DiceSide3.png" />
    <None Remove="Resources\DiceSide4.png" />
    <None Remove="Resources\DiceSide5.png" />
    <None Remove="Resources\DiceSide6.png" />
    <None Remove="Resources\GameRules.png" />
    <None Remove="Resources\storbritanniensFlagga.png" />
    <None Remove="Resources\sverigesFlagga.png" />
    <None Remove="Views\GreenBackground.jpg" />
    <None Remove="Views\Spelregler Engelska.png" />
    <None Remove="Views\Spelregler.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\DiceSide1.png" />
    <Resource Include="Resources\DiceSide2.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Fody" Version="6.8.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="PropertyChanged.Fody" Version="4.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\DiceSide3.png" />
    <Resource Include="Resources\DiceSide4.png" />
    <Resource Include="Resources\DiceSide5.png" />
    <Resource Include="Resources\DiceSide6.png" />
    <Resource Include="Resources\GameRules.png" />
    <Resource Include="Resources\storbritanniensFlagga.png" />
    <Resource Include="Resources\sverigesFlagga.png" />
    <Resource Include="Views\GreenBackground.jpg" />
    <Resource Include="Views\Spelregler Engelska.png" />
    <Resource Include="Views\Spelregler.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
