<Application x:Class="SUP23_G4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SUP23_G4"
             xmlns:vm="clr-namespace:SUP23_G4.ViewModels"
             xmlns:views="clr-namespace:SUP23_G4.Views.Pages" 
             StartupUri="/Views/MainWindow.xaml">
    
    <Application.Resources>
        <DataTemplate
            DataType="{x:Type vm:StartViewModel}">
            <views:StartView/> 
            
        </DataTemplate>

        <DataTemplate
       DataType="{x:Type vm:GameViewModel}">
            <views:GameView/>

        </DataTemplate>
        
        <DataTemplate
       DataType="{x:Type vm:GameRulesViewModel}">
            <views:GameRulesView/>

        </DataTemplate>

    </Application.Resources>
</Application>
